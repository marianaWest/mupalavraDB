<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Mupalavra</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Righteous&display=swap"
      rel="stylesheet"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
      integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
      crossorigin="anonymous"
    />
  </head>

  <body>

    <div class="container pt-5 addTerm">
      <div class="row text-center ">
        <h2>Editar termo</h2>
      </div>
     <div class="text-left align-items-center p-5 term-container">
      <% termsCol.forEach(item => { %>
        <% if(item.id === id) { %>
        <form action="/edit/" method="post">
          <label for="term">Entre o novo termo:</label>
          <input name="name" type="text" placeholder="<%= item.term %>" >
          <label for="description">Entre a nova descrição:</label>
          <input name="description" type="text" placeholder="<%= item.description %>">
          <button type="submit" class="addTermButton">Submit</button>
        </form>
        <% } %>
          <% }) %>
     </div>
   
    </div>
    

   

    
  </body>
</html>
